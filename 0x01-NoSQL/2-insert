#!/usr/bin/env bash

# Define the MongoDB database name
db_name="$1"

# Check if the database name is provided
if [ -z "$db_name" ]; then
    echo "Usage: $0 <database_name>"
    exit 1
fi

# MongoDB shell command to insert the document
mongo "$db_name" <<EOF
db.school.insert({name: "Holberton school"})
EOF
